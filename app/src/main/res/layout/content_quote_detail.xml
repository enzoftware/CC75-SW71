<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.QuoteDetailActivity"
    tools:showIn="@layout/activity_quote_detail">

    <com.androidnetworking.widget.ANImageView
        android:id="@+id/detailQuoteImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/quoteDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detailQuoteImageView"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/characterDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/quoteDetail"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/characterDirectionDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/characterDetail"/>


</android.support.constraint.ConstraintLayout>